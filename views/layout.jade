doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    link(rel='icon', type='image/png', href='#{staticsPrefixPath}/img/favicon.png')
    link(rel='stylesheet', href='#{staticsPrefixPath}/stylesheets/style.css' type='text/css', media='all')
    link(rel='stylesheet', href='#{staticsPrefixPath}/stylesheets/template/reset.css' type='text/css', media='screen')
    link(rel='stylesheet', href='#{staticsPrefixPath}/stylesheets/template/style.css' type='text/css', media='screen')
    link(rel='stylesheet', href='#{staticsPrefixPath}/stylesheets/template/zerogrid.css' type='text/css', media='all')
    link(rel='stylesheet', href='#{staticsPrefixPath}/stylesheets/template/responsive.css' type='text/css', media='all')
    script(type='text/javascript', src='//code.jquery.com/jquery-2.1.1.min.js')
    script(type='text/javascript', src='#{staticsPrefixPath}/javascripts/css3-mediaqueries.js')
    script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
    script(type='text/javascript').
      $(function() {
        var path = window.location.pathname;
        path = path.replace(/\/$/, "");
        path = decodeURIComponent(path);
        path = path === "" ? "/index.html" : path; // index

        $("ul.menu a").each(function() {
          var href = $(this).attr('href');
          if (path.substring(0, href.length) === href) {
              $(this).addClass('active');
          }
        });
      });
    block head
  body
    header
      .menu-row
          .main.zerogrid
            nav.wrapper
              ul.menu
                li
                  a(href='/index.html') Accueil
                li
                  a(href='/tournaments') Tournois
                li
                  a(href='#{forumUrl}') Forum
                li
                  a(href='/faq') FAQ
                - if(user)
                  li
                    a(href='/profile') Mon Profil
                - else
                  li
                    a(href='#{forumUrl}/login?next=#{baseUrl}#{currentReqPath}') Se connecter
        .row-bot
          .row-bot-bg
            .main.zerogrid
              .wrapper
                h1
                  a(href='index.html')
                    img(src='#{staticsPrefixPath}/img/logo.png', alt='logo')
              .main.zerogrid
                h2= htitle
              block home

    block aside

    section#content
      block content

    footer
      .main.zerogrid
        .aligncenter