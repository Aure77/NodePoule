doctype html
head(lang='fr')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='NodePoule game tournaments')
    meta(name='author', content='Aure77 & Mohye')
    link(rel='icon', type='image/png', href='#{staticsPrefixPath}/img/favicon.png')
    title= title
    // Bootstrap core CSS
    link(href='#{staticsPrefixPath}/css/bootstrap.min.css', rel='stylesheet')
    // Custom styles for this template
    link(href='#{staticsPrefixPath}/css/carousel.css', rel='stylesheet')
    link(href='#{staticsPrefixPath}/css/custom.css', rel='stylesheet')
    link(href='#{staticsPrefixPath}/css/style.css', rel='stylesheet', media='all')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    block head
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container      
        .navbar-header
          button(aria-controls="navbar",aria-expanded="false",data-target="#navbar",data-toggle="collapse",class="navbar-toggle collapsed",type="button")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/index.html') NodePoule
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/index.html') Accueil
            li
              a(href='/tournaments') Tournois
            li
              a(href='#{forumUrl}') Forum
            li
              a(href='/faq') FAQ
            - if(user)
              li
                a(href='/profile', title='Profil de #{user.userslug}', aria-label='Profil de #{user.userslug}')
                  img(class="nav-avatar", src='#{user.picture}')
                  span !{user.username}
            - else
              li
                a(href='#{forumUrl}/login?next=#{baseUrl}#{currentReqPath}') Se connecter
        // /.nav-collapse
    // Main jumbotron for a primary marketing message or call to action
    header.jumbotron
      .container
        h1
          a(href='/index.html')
            img.img-responsive(src='#{staticsPrefixPath}/img/logo.png', alt="")
        block home
    |     
    main.container
      block aside
      block content
    |   
    footer.container
      .row
        hr
        p &copy; NodePoule 2015

    //
      Bootstrap core JavaScript
      ==================================================
    // Placed at the end of the document so the pages load faster
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='#{staticsPrefixPath}/js/bootstrap.min.js')
    // IE10 viewport hack for Surface/desktop Windows 8 bug
    script(src='#{staticsPrefixPath}/js/ie10-viewport-bug-workaround.js')
    block js
