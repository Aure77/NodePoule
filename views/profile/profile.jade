extends layout

block home
  img.avatar(src='#{profil.user.picture}')
  span.pseudo-header #{profil.user.username}
  span.user-status #{profil.user.status}

block content
      .mid-left
        span.section-title Pseudos
          ul.list-pseudos
            -each gamerTag in profil.gamerTags
              li
                img(src='#{gamerTag.game.iconRelPath}', alt='#{gamerTag.game.name}', title='#{gamerTag.game.name}')
                | #{gamerTag.tag}
      div(style='width: 100%;')
        span.section-title Palmar√®s
        ul.list-palmares
          li
            img.palmares-icon(src='/images/hearthstone_icon.png', alt='palmares de #{profil.user.username}')
            .palmares-infos
              a(href='#') Titre du tournoi - xx/xx/xxxx
              br
              span Classement : xxe


block js
  link(rel='stylesheet', href='/styles/clndr.css' type='text/css', media='all')
  script(type='text/javascript', src='/js/underscore-min.js')
  script(type='text/javascript', src='/js/moment-2.5.1.min.js')