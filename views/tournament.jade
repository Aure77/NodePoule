extends layout

block content
  h1= title
  p Welcome to #{title}
  div(id='challonge-frame')
  script(type='text/javascript', src='/javascripts/jquery.challonge.js')
  script(type='text/javascript').
    $(function() {
        $('#challonge-frame').challonge('#{tournament.id}', {height: '100%', subdomain: '', theme: '2', multiplier: '1.0', match_width_multiplier: '1.0', show_final_results: '1', show_standings: '1'});
    });