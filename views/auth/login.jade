extends ../layout

block content
  .container
    form.form-signin(action="/auth/local?next=#{req.query.next}", method="post")
      h2.form-signin-heading Login
      label.sr-only(for='inputEmail') Identifier
      input#inputEmail.form-control(name='identifier', type='text', autofocus='', required='', placeholder='Identifier')
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(name='password', type='password', required='', placeholder='Password')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
